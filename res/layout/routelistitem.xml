<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="2"
  >
  <TableRow
      android:id="@+id/SelectRouteScreenRow2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    >
  	<TextView
        android:id="@+id/SelectRouteScreenTextTimeStart"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="top|left"
        android:layout_width="fill_parent"
    />
  	<TextView
        android:id="@+id/SelectRouteScreenTextTimeFirstBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="top|left"
    />
  	<TextView
        android:id="@+id/SelectRouteScreenTextDuration"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
    />
  	<TextView
        android:id="@+id/SelectRouteScreenTextTimeLastBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="top|left"
    />
  	<TextView
        android:id="@+id/SelectRouteScreenTextTimeEnd"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:gravity="right"
        android:layout_gravity="right"
    />
  </TableRow
  >
      <TableRow
      android:id="@+id/tableRow1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    >
          <TableLayout
        android:layout_span="4"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:id="@+id/tableLayout1"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
      >
              <TableRow
          android:id="@+id/SelectRouteScreenTableRowIcons"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:gravity="center"
          android:padding="0px"
        >
              </TableRow
      >
              <TableRow
          android:id="@+id/SelectRouteScreenTableRowDesc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center|center_horizontal"
          android:padding="0px"
        >
              </TableRow
      >
          </TableLayout
    >
      </TableRow
  >
</TableLayout
>
