<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical">

  <!-- from -->
  <com.omareitti.LocationSelector
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:orientation="horizontal"
      android:id="@+id/fromLocation" />

  <!-- to -->
  <com.omareitti.LocationSelector
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:orientation="horizontal"
      android:id="@+id/toLocation" />

  <!-- date, time and extra -->
  <com.omareitti.DateTimeSelector
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" android:orientation="horizontal"
      android:id="@+id/dateTime" />

  <!-- search -->
  <TableLayout android:layout_height="wrap_content" android:id="@+id/tableLayout3"
	       android:layout_width="match_parent" android:stretchColumns="*">
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
	      android:id="@+id/tableRow4">
      <Button android:layout_height="wrap_content" android:id="@+id/searchButton"
	      android:layout_width="fill_parent" android:text="@string/maBtnSearch"
	      android:textSize="26dip"
	      android:drawableLeft="@android:drawable/ic_menu_search"></Button>
      <Button android:text="..." android:id="@+id/MainAppMoreOptions"
	      android:layout_width="50dip" android:layout_height="wrap_content"
	      android:textSize="26dip"></Button>
    </TableRow>
  </TableLayout>

  <!-- history -->

  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	      android:id="@+id/scroller"
	      android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:fillViewport="true"
	      android:windowSoftInputMode="stateHidden">

    <TabHost android:id="@+id/TabHost01" android:layout_width="match_parent"
	     android:layout_height="wrap_content">

      <LinearLayout
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content">
	<TabWidget android:id="@android:id/tabs" android:layout_width="match_parent"
		   android:layout_height="wrap_content"/>
	<FrameLayout android:id="@android:id/tabcontent"
		     android:layout_width="match_parent" android:layout_height="wrap_content">
	  <ListView android:id="@+id/myPlacesList" android:layout_width="match_parent"
		    android:layout_height="wrap_content"/>
	  <ListView android:id="@+id/myRoutesList" android:layout_width="match_parent"
		    android:layout_height="wrap_content"/>
	</FrameLayout>
      </LinearLayout>
    </TabHost>
  </ScrollView>
</LinearLayout>
